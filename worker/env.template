# Ingestion Pipeline Environment Variables
# Copy this file to .env and modify as needed

# ----- Environment -----
ENVIRONMENT=development

# ----- Redis -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----- Qdrant -----
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# ----- LLM API (OpenAI-compatible endpoint) -----
LLM_API_BASE=http://host.docker.internal:8000/v1
LLM_API_KEY=sk-dummy-key

# ----- Embedding API (OpenAI-compatible endpoint) -----
EMBEDDING_API_BASE=http://host.docker.internal:8000/v1
EMBEDDING_API_KEY=sk-dummy-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ----- VLM API (for image extraction) -----
VLM_API_BASE=http://host.docker.internal:8000/v1
VLM_API_KEY=sk-dummy-key
VLM_MODEL=llava-v1.6-34b

# ----- Worker Configuration -----
WORKER_CONCURRENCY=5
JOB_TIMEOUT=600

# ----- Text Splitting -----
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ----- Crawling Defaults -----
DEFAULT_CRAWL_DEPTH=2
DEFAULT_CRAWL_STRATEGY=bfs

# ----- OpenTelemetry -----
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317




